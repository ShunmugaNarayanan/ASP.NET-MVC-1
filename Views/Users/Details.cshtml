@model ASP.NET_MVC_1.Models.Users

@{
    ViewBag.Title = "User Details";
}

<h3 class="mt-4">User Details</h3>

<table class="table table-bordered mt-4">
    <tr><th>First Name</th><td>@Model.FirstName</td></tr>
    <tr><th>Last Name</th><td>@Model.LastName</td></tr>
    <tr><th>Email</th><td>@Model.Email</td></tr>
    <tr><th>Mobile</th><td>@Model.Mobile</td></tr>
    <tr><th>Address</th><td>@Model.Address</td></tr>
    <tr><th>City</th><td>@Model.City</td></tr>
    <tr><th>District</th><td>@Model.District</td></tr>
    <tr><th>State</th><td>@Model.State</td></tr>
    <tr><th>Comments</th><td>@Model.Comments</td></tr>
</table>

<a href="@Url.Action("UserList", "Users")" class="btn btn-secondary">Back to List</a>
